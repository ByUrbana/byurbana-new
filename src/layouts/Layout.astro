---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;

// update deploy
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
        <meta
      name="description"
      content="Somos una compañía de tecnología financiera especializada en medios de pago."
    />
    <meta name="keywords" content="fintech, tecnología financiera, pagos, adquirencia, emisión, procesamiento, BY urbana" />
    <meta name="robots" content="index, follow" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Somos una compañía de tecnología financiera especializada en medios de pago." />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="BY urbana" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Somos una compañía de tecnología financiera especializada en medios de pago." />
    <meta name="author" content="BY urbana" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="font-CoFoNormal">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "CoFo Sans Normal";
    src: url("/font/CoFoSans-Regular.ttf") format("truetype");
    font-style: normal;
    font-display: swap;
    font-weight: normal;
  }
  @font-face {
    font-family: "CoFo-Sans-Bold";
    src: url("/font/CoFoSans-Bold.ttf") format("truetype");
    font-style: bold;
    font-display: swap;
    font-weight: bold;
  }
  @font-face {
    font-family: "CoFo Sans Medium";
    src: url("/font/CoFoSans-Medium.ttf") format("truetype");
    font-style: normal;
    font-display: swap;
    font-weight: normal;
  }
  @font-face {
    font-family: "CoFo Sans Black";
    src: url("/font/CoFoSans-Black.ttf") format("truetype");
    font-style: bold;
    font-display: swap;
    font-weight: bold;
  }
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
    overscroll-behavior: none;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
