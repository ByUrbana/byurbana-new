    </div>
    <a
      href="/"
      class="font-medium text-2xl translate-x-14 max-[1000px]:translate-x-0 max-[1680px]:text-xl max-[500px]:text-base max-[1440px]:translate-x-14"
      >BY <span class="font-semibold tracking-tighter"> ))) </span> URBANA</a
    >
    <a
      href="/contacto"
      class="font-medium text-sm border rounded-full px-10 py-1 max-[550px]:hidden max-[1680px]:text-[13px] max-[1366px]:px-8 max-[1366px]:text-[10px]"
      >CONTACTANOS</a
    >
  </nav>
  <script>
    const menu = document.querySelector("#menu");
    const openNavbar = document.querySelector("#openNavbar");
    const closeNavbar = document.querySelector("#bottom-close");

    openNavbar?.addEventListener("click", () => {
      openModal();
    });
    closeNavbar?.addEventListener("click", () => {
      closeModal();
    });
    function openModal() {
      showAndHide(menu, ["flex1", "scaleIn"], ["hidden", "scaleOut"]);
    }

    function closeModal() {
      showAndHide(menu, ["scaleOut"], ["scaleIn"]);
      setTimeout(() => {
        showAndHide(menu, ["hidden"], ["flex1"]);
      }, 300);
    }

    function showAndHide(
      element: Element | null,
      classesToAdd: string[],
      classesToRemove: string[]
    ) {
      element?.classList.remove(...classesToRemove);
      element?.classList.add(...classesToAdd);
    }
  </script>
</header>

<style>
  .glass {
    background: linear-gradient(
      135deg,
      rgba(11, 54, 146, 0.1),
      rgba(255, 255, 255, 0)
    );
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(11, 54, 146, 0.1);
    box-shadow: 0px 1px 32px 0px rgb(153 153 155 / 11%);
  }
  .flex1 {
    display: flex;
  }
  .scaleIn {
    animation: scaleIn 0.25s ease forwards;
    animation-iteration-count: 1;
  }
  .scaleOut {
    animation: scaleOut 0.25s ease-in forwards;
    animation-iteration-count: 1;
  }

  @keyframes scaleIn {
    0% {
      scale: 0.8;
    }
    90% {
      scale: 1.01;
    }
    98% {
      scale: 0.99;
    }
    100% {
      scale: 1;
    }
  }

  @keyframes scaleOut {
    0% {
      scale: 1.01;
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      scale: 0;
      opacity: 0;
    }
  }
</style>
