            </li>
            <li>
              <a
                class="text-xl font-CoFoNormal hover:text-2xl transition-all duration-300"
                href="/contacto">Contacto</a
              >
            </li>
          </ul>
          <button
            id="bottom-close"
            class="absolute top-5 right-5 py-2 px-8 rounded-2xl hover:scale-105 transition-all border-black border text-black text-xl font-medium max-[1000px]:px-8 max-[1000px]:py-2"
            >X</button
          >
          <div
            class="flex justify-between w-full flex-row p-10 items-end absolute bottom-0 text-black text-lg max-[550px]:flex-col max-[550px]:gap-5 max-[550px]:items-center max-[550px]:pt-0"
          >
            <div>
              <a
                class="text-sm border-b-4 border-black"
                href="https://www.instagram.com/by.urbana/"
                target="_blank"
                rel="noopener noreferrer">Instagram</a
              >
              <span>↗</span>
            </div>
            <div>
              <a
                class="text-sm border-b-4 border-black"
                href="https://www.linkedin.com/company/byurbana/"
                target="_blank"
                rel="noopener noreferrer">LinkedIn</a
              >
              <span>↗</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <script>
    const menu = document.querySelector("#menu");
    const openNavbar = document.querySelector("#openNavbar");
    const closeNavbar = document.querySelector("#bottom-close");

    openNavbar?.addEventListener("click", () => {
      openModal();
    });
    closeNavbar?.addEventListener("click", () => {
      closeModal();
    });
    function openModal() {
      showAndHide(menu, ["flex1", "scaleIn"], ["hidden", "scaleOut"]);
    }

    function closeModal() {
      showAndHide(menu, ["scaleOut"], ["scaleIn"]);
      setTimeout(() => {
        showAndHide(menu, ["hidden"], ["flex1"]);
      }, 300);
    }

    function showAndHide(
      element: Element | null,
      classesToAdd: string[],
      classesToRemove: string[]
    ) {
      element?.classList.remove(...classesToRemove);
      element?.classList.add(...classesToAdd);
    }
  </script>
</header>

<style>
  .glass {
    background: linear-gradient(
      135deg,
      rgba(11, 54, 146, 0.1),
      rgba(255, 255, 255, 0)
    );
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(11, 54, 146, 0.1);
    box-shadow: 0px 1px 32px 0px rgb(153 153 155 / 11%);
  }
  .flex1 {
    display: flex;
  }
  .scaleIn {
    animation: scaleIn 0.25s ease forwards;
    animation-iteration-count: 1;
  }
  .scaleOut {
    animation: scaleOut 0.25s ease-in forwards;
    animation-iteration-count: 1;
  }

  @keyframes scaleIn {
    0% {
      scale: 0.8;
    }
    90% {
      scale: 1.01;
    }
    98% {
      scale: 0.99;
    }
    100% {
      scale: 1;
    }
  }

  @keyframes scaleOut {
    0% {
      scale: 1.01;
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      scale: 0;
      opacity: 0;
    }
  }
</style>
