<style>
  .glass {
    background: linear-gradient(
      135deg,
      rgba(11, 54, 146, 0.1),
      rgba(255, 255, 255, 0)
    );
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(11, 54, 146, 0.1);
    box-shadow: 0px 1px 32px 0px rgb(153 153 155 / 11%);
  }
  .flex1 {
    display: flex;
  }
  .scaleIn {
    animation: scaleIn 0.25s ease forwards;
    animation-iteration-count: 1;
  }
  .scaleOut {
    animation: scaleOut 0.25s ease-in forwards;
    animation-iteration-count: 1;
  }

  @keyframes scaleIn {
    0% {
      scale: 0.8;
    }
    90% {
      scale: 1.01;
    }
    98% {
      scale: 0.99;
    }
    100% {
      scale: 1;
    }
  }

  @keyframes scaleOut {
    0% {
      scale: 1.01;
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      scale: 0;
      opacity: 0;
    }
  }
</style>
