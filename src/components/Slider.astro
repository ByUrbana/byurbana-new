<style>
  .slide {
    display: none;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .slide.active {
    display: block;
    opacity: 1;
  }

  /* Estilo para los botones de navegación */
  .nav-button {
    transition:
      background-color 0.2s,
      transform 0.2s;
  }

  .nav-button:hover {
    color: white;
    transform: scale(1.1);
  }

  /* Estilo para los indicadores (dots) */
  .indicator-dot {
    transition: background-color 0.3s;
  }

  .indicator-dot.active {
    background-color: #3b82f6; /* Blue-500 */
  }
</style><script>
  // Variables globales
  const slider = document.getElementById("image-slider");
  const slides = document.querySelectorAll(".slide");
  const indicatorsContainer = document.getElementById("indicators");
  const prevBtn = document.getElementById("prev-btn"); // Nuevo
  const nextBtn = document.getElementById("next-btn"); // Nuevo
  let currentSlideIndex = 0;
  let autoPlayInterval: number | undefined;
  const intervalTime = 12000; // 8 segundos

  /**
   * Inicializa los indicadores (puntos) de navegación.
   */
  function initializeIndicators() {
    slides.forEach((_, index) => {
      const dot = document.createElement("div");
      dot.classList.add(
        "indicator-dot",
        "w-3",
        "h-3",
        "rounded-full",
        "bg-white",
        "bg-opacity-50",
        "cursor-pointer"
      );
      dot.setAttribute("data-index", index.toString());

      // Añadir evento click para navegar al slide correspondiente
      dot.addEventListener("click", () => {
        showSlide(index);
        resetAutoPlay();
      });

      indicatorsContainer?.appendChild(dot);
    });
  }

  /**
   * Muestra un slide específico por índice.
   * @param {number} index - El índice del slide a mostrar.
   */
  function showSlide(index: number) {
    // Manejar el bucle: si es menor que 0, va al final; si es mayor, va al inicio.
    if (index >= slides.length) {
      currentSlideIndex = 0;
    } else if (index < 0) {
      currentSlideIndex = slides.length - 1;
    } else {
      currentSlideIndex = index;
    }

    // Ocultar todos los slides
    slides.forEach((slide) => slide.classList.remove("active"));

    // Mostrar el slide actual
    slides[currentSlideIndex].classList.add("active");

    // Actualizar los indicadores
    updateIndicators();
  }

  /**
   * Actualiza el estado visual de los indicadores (puntos).
   */
  function updateIndicators() {
    const dots = indicatorsContainer?.querySelectorAll(".indicator-dot");
    dots?.forEach((dot, index) => {
      dot.classList.remove("active", "bg-opacity-100");
      dot.classList.add("bg-opacity-50");
      if (index === currentSlideIndex) {
        dot.classList.add("active", "bg-opacity-100");
        dot.classList.remove("bg-opacity-50");
      }
    });
  }

  /**
   * Muestra el siguiente slide.
   */
  function nextSlide() {
    showSlide(currentSlideIndex + 1);
  }

  /**
   * Muestra el slide anterior.
   */
  function prevSlide() {
    showSlide(currentSlideIndex - 1);
  }

  /**
   * Inicia el auto-play del carrusel.
   */
  function startAutoPlay() {
    autoPlayInterval = setInterval(() => {
      nextSlide();
    }, intervalTime);
  }

  /**
   * Reinicia el auto-play al interactuar con los botones o puntos.
   */
  function resetAutoPlay() {
    clearInterval(autoPlayInterval);
    startAutoPlay();
  }

  // --- Manejadores de eventos (CORREGIDO: Usando IDs y addEventListener) ---
  // Se movió la lógica de asignación al window.onload para asegurar que los elementos existan.

  // --- Inicialización al cargar la página ---
  window.onload = function () {
    // 1. Inicializar componentes
    initializeIndicators();
    showSlide(currentSlideIndex); // Asegura que el primer slide esté visible
    startAutoPlay(); // Inicia la rotación automática

    // 2. Asignar clics a los botones (solución al problema de navegación)
    prevBtn?.addEventListener("click", function () {
      prevSlide();
      resetAutoPlay();
    });

    nextBtn?.addEventListener("click", function () {
      nextSlide();
      resetAutoPlay();
    });

    // 3. Pausar/Reanudar auto-play al pasar el ratón
    slider?.addEventListener("mouseenter", () =>
      clearInterval(autoPlayInterval)
    );
    slider?.addEventListener("mouseleave", startAutoPlay);
  };
</script>
