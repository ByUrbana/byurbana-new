</Layout>

<style>
  .bg-color-contact {
    background: rgb(4, 18, 38);
    background: linear-gradient(
      90deg,
      rgba(4, 18, 38, 1) 0%,
      rgba(0, 0, 0, 1) 100%
    );
  }
  .bg-animation-home {
    animation-name: bg-contact;
    animation-iteration-count: infinite;
    animation-timing-function: ease;
  }
  .bg-animation-home1 {
    animation-name: bg-animation-home;
    animation-duration: 4s;
  }
  .bg-animation-home2 {
    animation-name: bg-animation-home2;
    animation-duration: 7s;
  }
  .bg-animation-home3 {
    animation-name: bg-animation-home3;
    animation-duration: 5s;
  }
  @keyframes bg-animation-home {
    0% {
      opacity: 0;
    }
    10% {
      opacity: 0.2;
    }
    100% {
      opacity: 0;
      left: 60%;
    }
  }
  @keyframes bg-animation-home2 {
    0% {
      opacity: 0;
    }
    10% {
      opacity: 0.2;
    }
    100% {
      left: 45%;
      opacity: 0;
    }
  }
  @keyframes bg-animation-home3 {
    0% {
      opacity: 0;
    }
    10% {
      opacity: 0.2;
    }
    100% {
      left: 30%;
      opacity: 0;
    }
  }
</style>

<script>
  import Splide from "@splidejs/splide";
  var splide = new Splide(".splide", {
    wheel: true,
    perPage: 1,
    arrows: false,
    pagination: false,
    autoWidth: true,
    width: "100%",
    speed: 1500,
    padding: "10rem",
    breakpoints: {
      1100: {
        wheel: false,
      },
      breakpoints: {
        550: {
          gap: "2rem",
        },
      },
    },
  });

  splide.mount();
</script>
